<h1>Products</h1>

<%= link_to "新增產品", new_product_path %>
<table class = "table">
  <thead>
    <tr>
      <td>產品名稱</td>
      <td>產品敘述</td>
      <td>產品價格</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to "更新", edit_product_path(product.id) %> <%= link_to "刪除", product_path(product.id), method: :delete, data: {confirm: "是否刪除商品#{product.title}"} %></td>
      </tr>
    <% end %>
  </tbody>
 
</table>